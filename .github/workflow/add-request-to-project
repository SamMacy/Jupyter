name: Test for add request to project

on:
  pull_request:
    types:
      - labeled

jobs:
  add-to-project:
    name: Add issue to project
    runs-on: ubuntu-latest
    steps:
      - uses: actions/add-to-project@0.1.0
        with:
          project-url: https://github.com/SamMacy/playground/projects/2
          github-token: ${{ secrets.ORG_MEMBERSHIP_TOKEN }}
          labeled: testing-bot
          label-operator: AND
